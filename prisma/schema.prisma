generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Author {
  id    Int     @id @default(autoincrement())
  name  String
  email String  @unique
  books Book[]
}

model Category {
  id    Int    @id @default(autoincrement())
  name  String @unique
  books Book[]
}

model Book {
  id         Int      @id @default(autoincrement())
  title      String
  published  DateTime
  authorId   Int
  categoryId Int
  author     Author   @relation(fields: [authorId], references: [id])
  category   Category @relation(fields: [categoryId], references: [id])
}
